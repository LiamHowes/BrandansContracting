---
import { Image } from 'astro:assets';
import type { ImageMetadata } from "astro";

interface Props {
    title: string;
    img: ImageMetadata;
    href: string;
    alt: string;
    loading?: "lazy" | "eager";
}

const { title, img, href, alt, loading="lazy" } = Astro.props;

---

<a href={href} class="border-1 border-black flex flex-col service-card text-center relative group overflow-hidden flex-1 min-w-[200px] my-8 md:my-0">
    <h3 class="grow-1 py-4 px-4 uppercase font-bold">{title}</h3>
    <Image src={img} alt={alt} loading={loading} class="max-h-40 object-cover h-full max-w-5xl w-full object-center"/>
    <div  class="see-work uppercase font-bold w-full py-4 px-4 text-center absolute bottom-0 transform translate-y-full group-hover:translate-y-0 transition duration-300 ease-in-out motion-reduce:transition-none">
        See Work
    </div>
</a>